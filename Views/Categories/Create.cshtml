@model Category

<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <h1> Add Category </h1>

        <form class="border p-3 mb-3 rounded"  method="post" action="/Categories/Store">
        
        <div class="mt-4">
            <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="Enter Name..." />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mt-3">
            <input type="text" name="Description" value="@Model.Description" class="form-control" placeholder="Enter Description..." />
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        

        <button class="btn btn-success mt-5">Add</button>

    </form>
    

</body>
</html>